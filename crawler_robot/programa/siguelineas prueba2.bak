# include <16F877.h>
# use delay (clock=4000000)
# fuses XT, NOWDT, NOPUT, NOPROTECT
#include <LCD.C>
#byte puerto_b=6
#byte tris_b=0x86



void main()
{
   lcd_init();
   tris_b=0b00000000;//designamos todo el puerto b como salida 
   
   printf(lcd_putc,"\f");
   lcd_gotoxy(7,1); //posicionar el caracter en la primera columna y la 1ª fila
   printf(lcd_putc,"\PRUEBA");

   while(TRUE)
   {
     
         output_b(0b00011110);
         delay_ms(2000);
         output_b(0b00010110);
         delay_ms(2000);
         output_b(0b00001110);
         delay_ms(2000);

            
   }
     
}
